<%- include('header') -%>

<div class="text-center center-div my-5" id="login-container">
    <div class="container col-xl-3 col-10 py-5 border" id="login">
        <div class="title pb-5">
            <h2 class="font-weight-bold">Worktime Watcher</h2>
            <span>Log in for the existing user</span>
            <% if(locals.logout) { %>
                <div class="alter alert-success text-center">
                    <%= logout %>
                </div>
            <% } %>
        </div>
        <form action="/login" method="POST">
            <div class="form-group mb-2">
                <label>
                    <input type="email" class="form-control" placeholder="Email" name="email">
                    <small class="form-text text-muted text-left">Register email address</small>
                </label>
            </div>
            <div class="form-group mb-4">
                <label>
                    <input type="password" class="form-control" placeholder="Password" name="password">
                </label>
            </div>
            <button type="submit" class="btn btn-success rounded-pill">Login</button>
        </form>
    </div>
</div>
<%- include('footer') -%>

